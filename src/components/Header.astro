---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header>
	<nav >
		<h2><a href="/">{SITE_TITLE}</a></h2>
		<div class="links">
			<HeaderLink href="/">Home</HeaderLink>
		</div>
	</nav>
</header>

<style lang="postcss">
	nav {
		@apply px-3 lg:px-4 flex justify-between items-center ; 
	}
	.links {
		@apply flex gap-2;
	}
	header {
		@apply sticky top-0;
	}
</style>