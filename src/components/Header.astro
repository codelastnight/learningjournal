---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header>
	<nav >
		<div class="links">
			<a href="/"> Back Home</a>
		</div>
		<h2>{SITE_TITLE}</h2>
		
	</nav>
</header>

<style lang="postcss">
	nav {
		@apply px-3 lg:px-4 py-4 flex justify-between items-center ; 
	}
