---
import type { HTMLAttributes } from 'astro/types';

type Props = HTMLAttributes<'a'>;

const { href, class: className, ...props } = Astro.props;

---

<a data-tag-button href={href} data-href={href} class:list={[className ]} {...props}>
	<slot />
</a>
<style>
	a {
		@apply inline-block px-3 text-sm rounded-full border-[1.5px] border-transparent;
	}
	a.active {
		@apply border-current ;
	}
</style>
<script>
	 // Find all buttons with the `alert` class on the page.
	 const buttons = document.querySelectorAll('[data-tag-button]');
	 const queryString = import.meta.env.BASE_URL + '/' + window.location.search;
	// Handle clicks on each button.
	buttons.forEach((button) => {
		const href = button.getAttribute('data-href') + '/'

		if (queryString === href)
		button.classList.add('active')
		
	});
</script>